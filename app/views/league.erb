<%= erb :_navbar%>
<div class="container">

<h1><%=@league.name %></h1>

<h3>Teams</h3>
<ul>
<%@league.teams.each do |x| %>
       <li><a href="/team/<%=x.id%>"> <%= x.name%></a></li>
<% end %>
</ul> 

<ul>
<%@games.each do |x| %>
       <li> <%= x.day%>,<%= x.teams.first.name%> vs <%if x.teams.second==nil%>
       <%= nil %>
       <%else%>
       <%= x.teams.second.name %>
       <%end%>
       </li>
<% end %>
</ul> 



</div>
